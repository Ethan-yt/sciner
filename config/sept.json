{
  "name": "sept",
  "n_gpu": 1,
  "arch": {
    "type": "SEPT",
    "args": {
      "embedder_type": "bert",
      "embedding_dim": 768,
      "feature_size": 500,
      "lexical_dropout": 0.1,
      "mlp_dropout": 0.1,
      "max_span_width": 12,
      "spans_per_word": 0.4,
      "sampling_rate": 0.05
    }
  },
  "data_loader": {
    "type": "BertSciercDataReader",
    "args": {
      "output_type": "span",
      "max_span_width": 12,
      "data_dir": "data/scierc",
      "batch_size": 5,
      "shuffle": true,
      "small_data": false,
      "use_neg_sampling": true
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 2e-5,
      "weight_decay": 0
    }
  },
  "lr_scheduler": {
    "type": "WarmupLinearSchedule",
    "args": {
      "warmup_steps": 10,
      "t_total": 100
    }
  },
  "trainer": {
    "epochs": 150,
    "clip": 5,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "max fscore2",
    "early_stop": 10,
    "tensorboard": false
  }
}
