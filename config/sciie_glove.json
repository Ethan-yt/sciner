{
  "name": "span_ner_glove",
  "n_gpu": 1,
  "arch": {
    "type": "SCIIE",
    "args": {
      "embedder_type": "glove",
      "embedding_dim": 300,
      "feature_size": 200,
      "lexical_dropout": 0.5,
      "mlp_dropout": 0.4,
      "max_span_width": 8,
      "spans_per_word": 0.4
    }
  },
  "data_loader": {
    "type": "SciercDataReader",
    "args": {
      "output_type": "span",
      "max_span_width": 8,
      "data_dir": "data/scierc",
      "batch_size": 20,
      "shuffle": false,
      "small_data": false
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 5e-3,
      "weight_decay": 0
    }
  },
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 100,
    "clip": 5,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "max fscore2",
    "early_stop": 10,
    "tensorboard": false
  }
}
