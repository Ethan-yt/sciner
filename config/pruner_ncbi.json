{
  "name": "pruner_ncbi",
  "n_gpu": 1,
  "arch": {
    "type": "PrePruner",
    "args": {
      "embedder_type": "biobert",
      "feature_size": 200,
      "mlp_dropout": 0.1,
      "max_span_width": 12,
      "keep_rate": 0.2
    }
  },
  "data_loader": {
    "type": "SpanDataReader",
    "args": {
      "max_span_width": 10,
      "data_dir": "data/NCBI-disease",
      "batch_size": 5,
      "shuffle": true,
      "small_data": false
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 5e-5,
      "weight_decay": 0
    }
  },
  "lr_scheduler": {
    "type": "WarmupLinearSchedule",
    "args": {
      "warmup_steps": 10,
      "t_total": 100
    }
  },
  "trainer": {
    "epochs": 150,
    "clip": 5,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "max recall",
    "early_stop": 10,
    "tensorboard": false
  }
}
